{{!
    @template block_mycourses/course-action-menu

    This template renders action menu for each course.

    Example context (json):
    {
        "isfavourite": true
    }
}}
<div class="ml-auto dropdown">
    <button class="btn btn-link btn-icon icon-size-3 coursemenubtn"
        type="button"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false">
        <i class="icon fa fa-ellipsis-v fa-fw m-0" title="{{#str}} aria:courseactions, block_mycourses {{/str}} {{{fullname}}}" aria-hidden="true"></i>
        <span class="sr-only">{{#str}} aria:courseactions, block_mycourses {{/str}} {{{fullname}}}</span>
    </button>
    <div class="dropdown-menu dropdown-menu-right">
        {{#isteacher}}
            <a class="dropdown-item {{#visible}}hidden{{/visible}}" href="#"
                data-action="visible-course"
                data-course-id="{{id}}"
                aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
                >
                {{#str}} visiblecourse, block_mycourses {{/str}}
                <div class="sr-only">
                    {{#str}} aria:visiblecourse, block_mycourses, {{fullname}} {{/str}}
                </div>
            </a>
            <a class="dropdown-item {{^visible}}hidden{{/visible}}" href="#"
                data-action="invisible-course"
                data-course-id="{{id}}"
                aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
                >
                {{#str}} invisiblecourse, block_mycourses {{/str}}
                <div class="sr-only">
                    {{#str}} aria:invisiblecourse, block_mycourses, {{fullname}} {{/str}}
                </div>
            </a>
        {{/isteacher}}
        {{^isteacher}}
            <a class="dropdown-item {{#isfavourite}}hidden{{/isfavourite}}" href="#"
                data-action="add-favourite"
                data-course-id="{{id}}"
                aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
                >
                {{#str}} addtofavourites, block_mycourses {{/str}}
                <div class="sr-only">
                    {{#str}} aria:addtofavourites, block_mycourses {{/str}} {{{fullname}}}
                </div>
            </a>
            <a class="dropdown-item {{^isfavourite}}hidden{{/isfavourite}}" href="#"
                data-action="remove-favourite"
                data-course-id="{{id}}"
                aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
                >
                {{#str}} removefromfavourites, block_mycourses {{/str}}
                <div class="sr-only">
                    {{#str}} aria:removefromfavourites, block_mycourses {{/str}} {{{fullname}}}
                </div>
            </a>
            <a class="dropdown-item {{^hidden}}hidden{{/hidden}}" href="#"
                data-action="show-course"
                data-course-id="{{id}}"
                aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
                >
                {{#str}} show, block_mycourses {{/str}}
                <div class="sr-only">
                    {{#str}} aria:showcourse, block_mycourses, {{fullname}} {{/str}}
                </div>
            </a>
            <a class="dropdown-item {{#hidden}}hidden{{/hidden}}" href="#"
                data-action="hide-course"
                data-course-id="{{id}}"
                aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
                >
                {{#str}} hidecourse, block_mycourses {{/str}}
                <div class="sr-only">
                    {{#str}} aria:hidecourse, block_mycourses, {{fullname}} {{/str}}
                </div>
            </a>
        {{/isteacher}}
    </div>
</div>
